---
import '../styles/global.css';
const { title } = Astro.props;
---
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{title} | Aaditya Bhandari</title>
        <style is:global>
            @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;700&display=swap');
            html { scroll-behavior: smooth; }
            body { font-family: 'JetBrains Mono', monospace; background-color: #020617; color: #94a3b8; margin: 0; }
        </style>
    </head>
    <body class="antialiased">
        <nav class="fixed top-0 left-0 right-0 border-b border-white/5 bg-[#020617]/80 backdrop-blur-md z-50">
            <div class="max-w-6xl mx-auto px-8 py-6 flex justify-between items-center">
                <a href="#home" class="text-white font-bold tracking-tighter text-xl underline decoration-blue-600">~aaditya-bhandari</aaditya-bhandari></a>
                <div class="flex gap-10 text-[11px] uppercase tracking-[0.3em] font-bold">
                    <a href="#projects" class="hover:text-blue-500 transition-colors">/Projects</a>
                    <a href="#skills" class="hover:text-blue-500 transition-colors">/Skills</a>
                    <a href="#contact" class="hover:text-blue-500 transition-colors">/Contact</a>
                </div>
            </div>
        </nav>
        <main class="max-w-6xl mx-auto px-8"><slot /></main>
    </body>
</html>