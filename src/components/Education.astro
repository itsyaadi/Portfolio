---
const education = [
  {
    institution: "Kantipur Engineering College",
    degree: "Bachelors in Computer Engineering",
    duration: "2021 — Present",
    location: "Dhapakhel, Lalitpur"
  },
  {
    institution: "Sukuna Multiple Campus",
    degree: "10+2 Science",
    duration: "2020 — 2021",
    location: "Sundarharaincha-12, Morang"
  }
];
---
<section id="education" class="py-32 border-t border-white/5">
    <div class="text-blue-500 text-[10px] mb-16 font-bold tracking-[0.4em] uppercase">Education</div>
    <div class="space-y-12">
        {education.map((edu) => (
            <div class="flex flex-col md:flex-row justify-between items-start gap-4">
                <div>
                    <h3 class="text-2xl font-bold text-white tracking-tight">{edu.institution}</h3>
                    <p class="text-blue-500 italic mt-1">{edu.degree}</p>
                    <p class="text-zinc-500 text-sm mt-2 uppercase tracking-widest">{edu.location}</p>
                </div>
                <div class="text-zinc-400 font-bold tabular-nums">
                    {edu.duration}
                </div>
            </div>
        ))}
    </div>
</section>