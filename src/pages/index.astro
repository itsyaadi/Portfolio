---
import BaseLayout from '../layouts/BaseLayout.astro';
import Projects from '../components/projects.astro';
import Skills from '../components/skills.astro';
import Education from '../components/Education.astro';
import Contact from '../components/contact.astro';
---
<BaseLayout title="Portfolio">
    <section id="home" class="min-h-[80vh] flex flex-col justify-center py-20">
        <div class="text-blue-500 text-[10px] mb-6 font-bold tracking-[0.4em] uppercase opacity-80">
            01. Introduction
        </div>
        
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold text-white mb-8 tracking-tighter leading-tight">
            Hello, I am <br />
            <span class="text-blue-600 italic">Aaditya Bhandari.</span>
        </h1>
        
        <p class="text-lg md:text-xl leading-relaxed text-zinc-400 max-w-2xl">
            I am a Computer Engineering student in my final semester at Kantipur Engineering College. 
            I specialize in building intelligent data tools and practicing cybersecurity to keep digital systems safe.
        </p>
    </section>

    <Education />
    <Projects />
    <Skills />
    <Contact />
</BaseLayout>